---
import MainGridLayout from '../layouts/MainGridLayout.astro'

import { getEntry } from 'astro:content'
import { siteConfig } from '@/config'
import ImageWrapper from '@components/misc/ImageWrapper.astro'
import Markdown from '@components/misc/Markdown.astro'
const homePost = await getEntry('spec', 'home')

const { Content } = await homePost.render()
---

<MainGridLayout>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32 mb-4">
        <div class="card-base z-10 px-9 pb-6 relative w-full ">
            <ImageWrapper alt="Banner image of the blog" class:list={["mb-4"]}
					  src={siteConfig.banner.src}
			>
			</ImageWrapper>
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>